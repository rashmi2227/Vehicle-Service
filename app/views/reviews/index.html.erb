<%= render partial: "shared/adminheader" %>
<div class="container" width="100%">
  <ul class="responsive-table">
    <li class="table-header">
        <div class="col col-1">Review by</div>
        <div class="col col-2">Review Of</div>
        <div class="col col-3">Comment</div>
    </li>
    <% @reviews.each do |review| %>
        <li class="table-row">  
            <div class="col col-1" data-label="User Id"><%= review.user_login.user_name%></div>   
            <div class="col col-2" data-label="User Id"><%= review.reviewable_type == "UserLogin" ? "Employee" : (review.reviewable_type == "Servicerequest" ? "Service" : review.reviewable_type) %></div>          
            <div class="col col-3" data-label="Service Id"><%= review.comment %></div>
        </li>
     <% end %>
  </ul>
</div>