<%= render partial: "shared/header" %>
<form class="mx-auto col-10 col-md-8 col-lg-6" action="/service/add/<%= params[:id] %>" method="post">
    <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
  <div class="form-group">
    <label for="exampleInputEmail1">Available dates</label>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Start Date</label>
    <input type="date" class="form-control" name="servicerequest[start_date]" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter service date" required>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">End Date</label>
    <input type="date" class="form-control" name="servicerequest[end_date]" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter service date" required>
  </div>


  <button type="submit" class="btn btn-primary">Submit</button>
</form>
