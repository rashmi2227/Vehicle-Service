<%= render partial: "shared/basicheader" %>
<h2>Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put ,class: "box mx-auto col-10 col-md-8 col-lg-6"}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <%= f.label :password, "New password" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password" , class: "form-control"%>
  </div>

  <div class="from-group">
    <%= f.label :password_confirmation, "Confirm new password" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "form-control"%>
  </div>
  <br>

  <div class="form-group">
    <%= f.submit "Change my password", class: "btn btn-primary" %>
  </div>

<%= render "devise/shared/links" %>
<% end %>
