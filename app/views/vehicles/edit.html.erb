<%= render partial: "shared/header" %>
<%= form_for @vehicle, url: "/vehicles/#{@vehicle.id}", method: :patch, html: {class: "mx-auto col-10 col-md-8 col-lg-6"} do |f| %>
<div class="form-group">
  <%= f.label :vehicle_modal %>
  <%= f.text_field :vehicle_modal, class: "form-control" %>
  </div>
<div class="form-group">
  <%= f.label :brand %>
  <%= f.text_field :make, class: "form-control" %>
  </div>
<div class="form-group">
  <%= f.label :color %>
  <%= f.text_field :color, class: "form-control" %>
  </div>
<div class="form-group">
  <%= f.label :vehicle_number %>
  <%= f.text_field :licence_number, class: "form-control" %>
  </div>
<div class="form-group">
  <%= f.label :purchase_date %>
  <%= f.text_field :purchase_date, class: "form-control" %>
  </div>
<div class="form-group">
  <%= f.submit "Update Vehicle", class: "btn btn-primary"  %>
  </div>
<% end %>



