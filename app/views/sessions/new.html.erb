<%= render partial: "shared/basicheader" %>
<%= form_with(scope: :session, url: '/sessions/login', class:"mx-auto col-10 col-md-8 col-lg-6", :method => :post ) do |f| %>
 
<div class="form-group">
  <%= f.label :email %><br/>
  <%= f.email_field :email, class: "form-control" %>
</div>
 
<div class="form-group">
  <%= f.label :password %><br/>
  <%= f.password_field :password_digest, class: "form-control" %>
</div>


 
<div class="form-group">
  <%= f.submit "Log in", class: "btn btn-primary" %>
</div>
 
<% end %>
